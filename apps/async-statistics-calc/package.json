{
  "name": "async-statistics-calc",
  "version": "1.0.0",
  "description": "A Node.js application that runs periodically to calculate statistics for twitch-statistics-page",
  "main": "index.ts",
  "scripts": {
    "build": "tsc",
    "start": "tsc && dotenvx run -f .env.development -- node dist/src/index.js",
    "start-prod": "tsc && dotenvx run -f .env.production -- node dist/src/index.js",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.10.3",
    "axios": "^1.7.4"
  }
}
